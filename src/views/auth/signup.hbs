<header class="masthead-signup">
<div class="container p-4" id="contenedor">
    <div class="row" id="App">
        <div class="col-md-4 mx-auto">
            <div class="card text-center back-signin">
                <div class="card-header">
                    <h3 class="text-white">Registrate</h3>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group">
                            <input type="type" name="nombre" id="nombre" placeholder="Nombre" class="form-control bg-transparent" autofocus>
                            <span id="nombreError" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="type" name="apellido" id="apellido" placeholder="Apellido" class="form-control bg-transparent">
                            <span id="apellidoError" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" id="email" placeholder="Email" class="form-control bg-transparent">
                            <span id="emailError" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" placeholder="Password" class="form-control bg-transparent">
                            <span id="passwordError" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" name="verificar-password" id="verificar-password" placeholder="Reingrese el Password" class="form-control bg-transparent">
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success btn-block" value="Registrar" onclick="AltaUsuario.crearUsuario();" readonly/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</header>
<script type="module" src="js/signup.js"></script>