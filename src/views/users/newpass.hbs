<div class="container p-4" id="contenedor">
    <div class="row" id="App">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Cambio de Password</h3>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group">
                            <input type="text" name="email" id="email" placeholder="{{user.email}}" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <input type="password" name="passwordActual" id="passwordActual" placeholder="Password Actual" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="nuevaPass" id="nuevaPass" placeholder="Nueva Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="repNuevaPass" id="repNuevaPass" placeholder="Reingrese la nueva Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input class="btn btn-success" value="Registrar" onclick="Renovar.cambiar('{{user._id}}');"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="../js/newpws.js"></script>